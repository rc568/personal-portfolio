---
import type { Project } from "../../interfaces";
import { lineBreakFormatter } from "../../utils/formatter";
import Chip from "../Common/Chip.astro";
import Redirect from "@icons/redirect.svg?raw";

type Props = Project;

const { title, description, technologies, show = true, href } = Astro.props;
---

{
  show && (
    <article class="rounded-2xl overflow-clip bg-gradient-to-r from-cyan-600 to-green-300 via-85% flex flex-col">
      <img
        class="w-full bg-stone-300 h-[240px] object-cover"
        src="/smart-campus.png"
        alt="recurso"
      />
      <div class="flex flex-col justify-between px-6 py-4 gap-2 grow max-lg:px-4">
        <div>
          <div class="flex justify-between items-center">
            <h3 class="text-lg dark:text-teal-50">{title}</h3>
            <a class="w-7" href={href} target="_blank" rel="noreferrer noopener">
              <Fragment set:html={Redirect} />
            </a>
          </div>
          <p
            class="text-base text-slate-800 py-4 leading-7"
            set:html={lineBreakFormatter(description)}
          />
        </div>
        <div>
          <h3 class="text-base dark:text-teal-50">Tecnolog√≠as usadas:</h3>
          <div class="flex gap-2 pt-2">
            {technologies.map((tech) => (
              <Chip text={tech} size={"small"} />
            ))}
          </div>
        </div>
      </div>
    </article>
  )
}

