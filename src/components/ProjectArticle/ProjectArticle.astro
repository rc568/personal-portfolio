---
import type { Article } from "../../interfaces";
import ArticleCard from "./ArticleCard.astro";

interface Props {
    title: string;
    anchorTag: string;
    articles: Article[];
}

const { title, articles, anchorTag } = Astro.props;
---

<section class="flex flex-col justify-center gap-4 max-lg:min-h-screen max-lg:py-20" id={anchorTag}>
    <h2 class="text-3xl tracking-wide">{title}</h2>
    {articles.map((article) => <ArticleCard {...article} />)}
</section>
