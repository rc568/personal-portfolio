---
import Chip from "../Common/Chip.astro";
import { technologies } from "../../utils/info";
---

<section class="flex flex-col gap-4 py-6">
    <h2 class="text-2xl font-medium">Tecnolog√≠as</h2>
    {
        technologies.map((technology) => {
            return technology.show && (
                <article class="">
                    <h3 class="text-lg pb-2">{technology.title}</h3>
                    <div class="flex gap-3">
                        {technology.technologies.map(tech => <Chip text={tech} />)}
                    </div>
                </article>
            );
        })
    }
</section>
